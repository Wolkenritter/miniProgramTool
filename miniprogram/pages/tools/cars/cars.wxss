/* miniprogram/pages/tools/cars.wxss */
.search-area {
  display: flex;
  padding: 16rpx 32rpx;
  /* position: fixed;
  top: 0;
  left: 0; */
  width: 100%;
  background-color: #ffffff;
  box-sizing: border-box;
  z-index: 10;
  align-items: center;
}
.search-input {
  width: 80%;
}
.search-input input {
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  height: 100%;
  padding: 0 16rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.search-btn-area {
  width: 20%;
  text-align: right;
}

.tools-box {
  /* transform: translateY(100rpx); */
}
.flex-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  background: #ffffff;
  padding: 20rpx 32rpx;
}
.initial-text {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding-left: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.flex-item {
  width: 25%;
  margin-bottom: 40rpx;
  box-sizing: border-box;
  padding: 1%;
}

.img {
  border: 1px solid #cccccc;
  border-radius: 4rpx;
}

.text {
  text-align: center;
  word-wrap: wrap;
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-top: 20rpx;
  font-weight: 500;
}